@prefix : <http://example.org/restaurant#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix schema: <http://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

# Define Classes
:Restaurant a rdfs:Class .
:Menu a rdfs:Class ;
    rdfs:subClassOf schema:Menu .
:MenuSection a rdfs:Class ;
    rdfs:subClassOf schema:MenuSection .
:MenuItem a rdfs:Class ;
    rdfs:subClassOf schema:MenuItem .
:FoodIngredient a rdfs:Class ;
    rdfs:subClassOf schema:FoodIngredient .
:Person a rdfs:Class ;
    rdfs:subClassOf schema:Person .
:DietaryPreference a rdfs:Class .

# Instances
:Restaurant_TheOnePiece a :Restaurant ;
    schema:name "The One Piece" ;
    schema:hasMenu :Menu_TheOnePiece ;
    :hasClient :Client_Francesco .

:Menu_TheOnePiece a :Menu ;
    schema:hasMenuSection :PreMeal_Section, :FirstDish_Section, :SecondDish_Section, :Appetizers_Section, :Dessert_Section .

:PreMeal_Section a :MenuSection ;
    schema:name "Pre-meal" ;
    schema:hasMenuItem :PlatterOfLocalCuredMeats .

:PlatterOfLocalCuredMeats a :MenuItem ;
    schema:name "Platter of local cured meats served with Fried Gnocco" ;
    schema:recipeIngredient :Ingredient_Salame, :Ingredient_GnoccoFritto .

:Ingredient_Salame a :FoodIngredient ;
    schema:name "Salame" ;
    schema:calories "400"^^xsd:integer ;
    schema:allergen "None" ;
    schema:recipeCategory "Omnivore" .

:Ingredient_GnoccoFritto a :FoodIngredient ;
    schema:name "Gnocco Fritto" ;
    schema:calories "300"^^xsd:integer ;
    schema:allergen "Lactose, Gluten" ;
    schema:recipeCategory "Vegan" .

:FirstDish_Section a :MenuSection ;
    schema:name "First dish" .

:SecondDish_Section a :MenuSection ;
    schema:name "Second dish" .

:Appetizers_Section a :MenuSection ;
    schema:name "Appetizers" .

:Dessert_Section a :MenuSection ;
    schema:name "Dessert" .

:Client_Francesco a :Person ;
    foaf:name "Francesco" ;
    :clientOf :Restaurant_TheOnePiece ;
    :hasPreference :Francesco_Preferences .

:Francesco_Preferences a :DietaryPreference ;
    :maxCaloryIntake "low" ;
    :allergens "Egg, Gluten" ;
    :dietaryCategory "Omnivore" .
